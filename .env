# --- Caminhos da base e índices ---
DATA_RAW_DIR=data/raw
DATA_PROCESSED_DIR=data/processed
DATA_INDEXES_DIR=data/indexes
INDEX_LEX_DIR=
INDEX_SEM_DIR=

# --- Parâmetros de recuperação ---
K_LEX=10
K_SEM=10
K_FINAL=5

# --- Combinação (rank) e limiares BRUTOS de classificação ---
ALPHA=0.6            # peso do léxico na média normalizada (apenas para score_final)
TAU_LEX=0.85         # limiar BRUTO para plágio (léxico)
TAU_SEM=0.85         # limiar BRUTO para plágio/paráfrase (semântico)
DELTA_PARA=0.15      # exige léxico <= TAU_LEX - DELTA_PARA para ser paráfrase
MIN_GATE=0.10        # descarta candidatos muito fracos em ambos (anti-ruído)

# --- Modelo de embeddings ---
SEM_MODEL_NAME=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2

# --- Janelas deslizantes ---
WINDOW_SIZE=40
STRIDE=20
CONTEXT_MARGIN=10
